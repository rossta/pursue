<h1>Training Plan: <%= @training_plan.title %></h1>

<p><%= @training_plan.summary %></p>

<%= link_to 'Add workout', new_training_plan_workout_plan_path(@training_plan), class: 'button small' %>

<h5>Overview</h5>
<section class="<%= dom_class(@training_plan) %>">
<% @training_plan.weeks.each do |week| %>
  <div><%= link_to week.title, training_plan_week_path(@training_plan, week) %></div>
<% end %>
</section>
